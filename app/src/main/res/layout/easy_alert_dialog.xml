<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/easy_dialog_background"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/EasyDialog.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Dialog Title" />

    <TextView
        android:id="@+id/tvMessage"
        style="@style/EasyDialog.Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="This is a dialog message that explains what this dialog is about and what the user needs to do." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNegative"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@color/easyui_dialog_negative_button"
            tools:text="Cancel" />

        <Button
            android:id="@+id/btnNeutral"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@color/easyui_dialog_neutral_button"
            tools:text="Maybe Later" />

        <Button
            android:id="@+id/btnPositive"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/easyui_dialog_positive_button"
            tools:text="OK" />
    </LinearLayout>
</LinearLayout>