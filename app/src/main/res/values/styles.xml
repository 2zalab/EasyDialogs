<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dialog Styles -->
    <style name="EasyDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/easy_dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="EasyDialog.Alert">
        <item name="android:textColorPrimary">@color/easyui_dialog_title</item>
        <item name="android:textColorSecondary">@color/easyui_dialog_message</item>
        <item name="colorAccent">@color/easyui_dialog_positive_button</item>
    </style>

    <style name="EasyDialog.Custom">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- Menu Styles -->
    <style name="EasyMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/easy_menu_background</item>
        <item name="android:textColor">@color/easyui_menu_text</item>
    </style>

    <style name="EasyContextMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/easy_menu_background</item>
        <item name="android:textColor">@color/easyui_context_menu_text</item>
    </style>

    <!-- Text Styles -->
    <style name="EasyDialog.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/easyui_dialog_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="EasyDialog.Message">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/easyui_dialog_message</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="EasyMenu.Item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/easyui_menu_text</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
</resources>